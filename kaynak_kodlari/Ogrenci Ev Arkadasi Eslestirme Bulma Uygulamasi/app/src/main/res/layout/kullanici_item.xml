<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="5dp"
    >


    <ImageView
        android:id="@+id/kullanici_item_imageView"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:scaleType="fitXY" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:layout_gravity="center"
        >


        <TextView
            android:id="@+id/kullanici_item_textViewKullaniciIsim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kullanıcı İsmi"
            android:textSize="19dp"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/kullanici_item_textViewKullaniciEgitim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bilgisayar Mühendisliği/3"
            android:textSize="17dp"

            />
        <TextView
            android:id="@+id/kullanici_item_textViewKullanıcıDurum"
           android:layout_marginTop="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ev/Oda Arkadaşı Arıyor"
            android:textSize="17dp"/>

        <TextView
            android:id="@+id/kullanici_item_textViewKullanıcıUzaklik"
            android:layout_marginTop="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kampüse Uzaklık : 3km"
            android:textSize="17dp"

            />
    </LinearLayout>
</LinearLayout>