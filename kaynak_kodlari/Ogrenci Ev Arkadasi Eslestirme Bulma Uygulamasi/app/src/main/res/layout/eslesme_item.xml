<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/eslesme_item_SenderIsim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="İstek Gönderen Kullanıcı:"
            android:textSize="19dp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/eslesme_item_ReceiverIsim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="İstek Alan Kullanıcı:"
            android:textSize="19dp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/eslesme_item_Durum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Durum"
            android:textSize="17dp" />

        <TextView
            android:id="@+id/eslesme_item_GondermeTarihi"
            android:layout_marginTop="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gönderme Tarihi:"
            android:textSize="17dp" />


    </LinearLayout>


</LinearLayout>
